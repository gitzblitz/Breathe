<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity" android:background="@color/colorPrimary">


	<ImageView
			android:layout_width="190dp"
			android:layout_height="190dp"
			android:id="@+id/lotusImageView"
			app:srcCompat="@drawable/breatheimg"
			android:layout_centerInParent="true"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="49dp"
			android:id="@+id/breathsTaken"
			android:layout_alignParentTop="true"
			android:text="8 breaths"
			android:textSize="18sp"

	/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/lastBreath"
			android:textSize="18sp"
			android:layout_alignStart="@id/breathsTaken"
			android:textColor="@color/colorAccent"
			android:text="Last at 11:40"
			android:layout_below="@id/breathsTaken"

	/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/todayMinusText"
			android:text="4 min today"
			android:textColor="@color/colorAccent"
			android:textSize="18sp"
			android:layout_below="@id/lastBreath"
	/>

	<TextView
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_below="@id/todayMinusText"
			android:layout_alignParentEnd="true"
			android:text="1 Minute"
			android:textSize="30sp"
			android:layout_marginEnd="51dp"
			android:textColor="@color/colorAccent"/>

	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/startButton"
			android:text="Start"
			android:background="@color/colorAccent"
			android:textColor="@android:color/background_light"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
	/>

	<TextView
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_below="@id/lotusImageView"
			android:layout_centerHorizontal="true"
			android:text="Breathe"
			android:layout_marginTop="37dp"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:textStyle="bold"
	/>
</RelativeLayout>